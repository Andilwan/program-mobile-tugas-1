// Mendefinisikan fungsi dengan parameter bernama
void greet({String firstName = '', String lastName = ''}) {
  // Menampilkan salam menggunakan parameter
  print('Hello, $firstName $lastName!');
}

void main() {
  // Memanggil fungsi greet dengan parameter bernama
  greet(firstName: 'Andil', lastName: 'Wan'); // Menyediakan nama depan dan nama belakang
  greet(lastName: 'Andilwan'); // Hanya menyediakan nama belakang
  greet(); // Memanggil fungsi tanpa argumen
}
